@model FreeKingdomLit.Models.Genre

<h2>Add a Book</h2>

<h4>Add a Book to this Genre: @Html.DisplayFor(model => model.Name)</h4>

@using  (Html.BeginForm())
{
  @Html.HiddenFor(model => model.GenreId)

  @Html.Label("Select Book")
  @Html.DropDownList("BookId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back", "Index")</p>